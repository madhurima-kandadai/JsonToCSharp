@{
    ViewBag.Title = "Main";
}
<script src="~/Scripts/AppScripts/jsonController.js"></script>

<h4>Primary key Id column will be generated by default</h4>

<div ng-controller="jsonController">
    <div class="">
        Model name : <input type="text" ng-model="modelName" placeholder="Enter model name" />
    </div>
    <div>
        Property Name : <input type="text" ng-model="propertyName" placeholder="Enter property name" />
        Data Type: <select ng-model="dataType">
            <option value="">Select</option>
            <option ng-repeat="type in dataTypes" value="{{type.value}}">{{type.name}}</option>
        </select>
        Required : <input type="checkbox" ng-model="required" />
        <button ng-click="SaveModelDetails()">Add</button>
    </div>
    <div>
        <table border="1" cellpadding="1" cellspacing="2" style="width:100%">
            <thead>
                <tr>
                    <th style="width:25%">Property Name</th>
                    <th style="width:25%">Type</th>
                    <th style="width:25%">Required</th>
                    <th style="width:25%"></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="prop in properties">
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>